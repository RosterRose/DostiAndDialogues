<% 
const body = `
<div class="error-container">
    <div class="container">
        <div class="error-content">
            <div class="error-animation">
                <div class="broken-mic">
                    <div class="mic-pieces">
                        <div class="mic-piece piece-1">
                            <i class="fas fa-microphone-slash"></i>
                        </div>
                        <div class="mic-piece piece-2">
                            <i class="fas fa-volume-mute"></i>
                        </div>
                        <div class="mic-piece piece-3">
                            <i class="fas fa-broadcast-tower"></i>
                        </div>
                    </div>
                    <div class="static-lines">
                        <div class="static-line"></div>
                        <div class="static-line"></div>
                        <div class="static-line"></div>
                        <div class="static-line"></div>
                    </div>
                </div>
            </div>
            
            <div class="error-text">
                <h1 class="error-code">404</h1>
                <h2 class="error-title">Signal Lost</h2>
                <p class="error-description">
                    Oops! It seems like this conversation got cut off. The page you're looking for 
                    couldn't be found in our dialogue archives.
                </p>
                <p class="error-subtitle">
                    Don't worry though, there are plenty of other great conversations waiting for you!
                </p>
                
                <div class="error-actions">
                    <a href="/" class="error-btn primary">
                        <i class="fas fa-home"></i>
                        Back to Home
                    </a>
                    <a href="#" onclick="history.back()" class="error-btn secondary">
                        <i class="fas fa-arrow-left"></i>
                        Go Back
                    </a>
                </div>
                
                <div class="suggested-links">
                    <h3>Maybe you were looking for:</h3>
                    <ul>
                        <li><a href="/terms"><i class="fas fa-file-contract"></i> Terms & Conditions</a></li>
                        <li><a href="/privacy"><i class="fas fa-shield-alt"></i> Privacy Policy</a></li>
                        <li><a href="/disclaimer"><i class="fas fa-exclamation-triangle"></i> Disclaimer</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="error-footer">
            <div class="podcast-quote">
                <i class="fas fa-quote-left"></i>
                <p>"Every great conversation starts with getting lost and finding your way back to what matters."</p>
                <span class="quote-author">- Dosti And Dialogues</span>
            </div>
        </div>
    </div>
</div>

<style>
.error-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    padding: 60px 0;
}

.error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.error-animation {
    margin-bottom: 50px;
    position: relative;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.broken-mic {
    position: relative;
    width: 150px;
    height: 150px;
}

.mic-pieces {
    position: relative;
    width: 100%;
    height: 100%;
}

.mic-piece {
    position: absolute;
    font-size: 2.5rem;
    color: #e74c3c;
    opacity: 0.7;
    animation: float 3s ease-in-out infinite;
}

.piece-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.piece-2 {
    top: 40%;
    right: 15%;
    animation-delay: 0.5s;
}

.piece-3 {
    bottom: 20%;
    left: 30%;
    animation-delay: 1s;
}

.static-lines {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100px;
    height: 60px;
}

.static-line {
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #f39c12, transparent);
    margin: 10px 0;
    animation: static 1.5s ease-in-out infinite;
}

.static-line:nth-child(2) { animation-delay: 0.3s; }
.static-line:nth-child(3) { animation-delay: 0.6s; }
.static-line:nth-child(4) { animation-delay: 0.9s; }

@keyframes float {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    33% {
        transform: translateY(-10px) rotate(5deg);
    }
    66% {
        transform: translateY(5px) rotate(-3deg);
    }
}

@keyframes static {
    0%, 100% {
        opacity: 0.3;
        transform: scaleX(0.8);
    }
    50% {
        opacity: 1;
        transform: scaleX(1.2);
    }
}

.error-text {
    margin-bottom: 40px;
}

.error-code {
    font-size: 8rem;
    font-weight: 900;
    background: linear-gradient(45deg, #e74c3c, #c0392b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    text-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
}

.error-title {
    font-size: 2.5rem;
    color: #ecf0f1;
    margin-bottom: 20px;
    font-weight: 700;
}

.error-description {
    font-size: 1.2rem;
    color: #bdc3c7;
    margin-bottom: 15px;
    line-height: 1.6;
}

.error-subtitle {
    font-size: 1rem;
    color: #95a5a6;
    margin-bottom: 40px;
    font-style: italic;
}

.error-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 50px;
}

.error-btn {
    padding: 15px 30px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    min-width: 150px;
    justify-content: center;
}

.error-btn.primary {
    background: linear-gradient(135deg, #f39c12, #e67e22);
    color: #2c3e50;
}

.error-btn.secondary {
    background: rgba(236, 240, 241, 0.1);
    color: #ecf0f1;
    border: 2px solid rgba(149, 165, 166, 0.5);
}

.error-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.error-btn.primary:hover {
    background: linear-gradient(135deg, #e67e22, #d35400);
}

.error-btn.secondary:hover {
    background: rgba(149, 165, 166, 0.2);
    border-color: #95a5a6;
}

.suggested-links {
    background: rgba(44, 62, 80, 0.6);
    padding: 30px;
    border-radius: 15px;
    border: 1px solid rgba(236, 240, 241, 0.1);
}

.suggested-links h3 {
    color: #f39c12;
    margin-bottom: 20px;
    font-size: 1.3rem;
}

.suggested-links ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.suggested-links a {
    color: #bdc3c7;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 15px;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.suggested-links a:hover {
    color: #f39c12;
    background: rgba(243, 156, 18, 0.1);
    transform: translateX(5px);
}

.suggested-links i {
    width: 20px;
    color: #f39c12;
}

.error-footer {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid rgba(236, 240, 241, 0.1);
}

.podcast-quote {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
    position: relative;
    padding: 30px;
    background: rgba(52, 73, 94, 0.5);
    border-radius: 15px;
    border-left: 4px solid #f39c12;
}

.podcast-quote i {
    position: absolute;
    top: 15px;
    left: 20px;
    font-size: 2rem;
    color: #f39c12;
    opacity: 0.5;
}

.podcast-quote p {
    font-size: 1.1rem;
    color: #ecf0f1;
    font-style: italic;
    margin-bottom: 15px;
    line-height: 1.6;
    padding-left: 30px;
}

.quote-author {
    color: #f39c12;
    font-weight: 600;
    font-size: 0.9rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .error-code {
        font-size: 6rem;
    }
    
    .error-title {
        font-size: 2rem;
    }
    
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-btn {
        width: 100%;
        max-width: 280px;
    }
    
    .suggested-links ul {
        align-items: center;
    }
    
    .suggested-links a {
        justify-content: center;
        max-width: 250px;
    }
}

@media (max-width: 480px) {
    .error-container {
        padding: 40px 0;
    }
    
    .error-code {
        font-size: 4rem;
    }
    
    .error-animation {
        height: 150px;
        margin-bottom: 30px;
    }
    
    .broken-mic {
        width: 120px;
        height: 120px;
    }
    
    .mic-piece {
        font-size: 2rem;
    }
    
    .podcast-quote {
        padding: 20px;
    }
    
    .podcast-quote p {
        font-size: 1rem;
        padding-left: 20px;
    }
}
</style>
`;
%>

<%- include('layout', { body }) %>